<div class="flex w-full mx-auto md:w-1/3">
  <div class="p-5 border border-gray-200 rounded-lg">

    <h2 class="mb-2 text-lg font-semibold"><%= @product.name %></h2>
    <div class="relative w-full mb-3 h-62 lg:mb-0">
        <img src="https://cdn.pixabay.com/photo/2017/01/11/11/33/cake-1971552__480.jpg" alt="Just a flower"
          class="object-fill w-full h-full rounded">
    </div>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Description:</strong>
      <%= @product.description %>
    </p>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Price:</strong>
      <%= @product.price %>
    </p>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Balance:</strong>
      <%= @product.balance %>
    </p>

    <div class="flex justify-between">
      <%= link_to 'Add to Cart', add_to_cart_path(product_id: @product.id), method: :post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"%>
      <%= link_to 'Edit', edit_product_path(@product), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to 'Destroy', product_path(@product), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Back', products_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
