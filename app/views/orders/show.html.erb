<div class="w-full mx-auto md:w-1/2">
  <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="mb-4 text-2xl font-bold">Order Details</h1>

  <div class="mb-4">
    <table id = "order" class="w-full text-sm text-left text-black-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">Product</th>
          <th scope="col" class="px-6 py-3">Price</th>
          <th scope="col" class="px-6 py-3">Quantity</th>
          <th scope="col" class="px-6 py-3">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% sum_order = 0 %>
        <% @order.product_orders.each do |product_order| %>
          <tr>
            <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white"><%= product_order.product.name %></td>
            <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white"><%= product_order.product.price %></td>
            <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white"><%= product_order.amount %></td>
            <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white"><%= product_order.product.price * product_order.amount %></td>
          </tr>
          <% sum_order += product_order.product.price * product_order.amount %>
        <% end %>
      </tbody>
      <tfoot>
        <tr class="border-b bg-neutral-100 dark:border-neutral-500 dark:bg-neutral-700">
          <th class="px-6 py-4 text-center whitespace-nowrap" colspan="3">Total Amount:</th>
          <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white"><%= sum_order %></td>
        </tr>
      </tfoot>
    </table>
  </div>
  <br>
  <br>
  <br>
  <div class="mb-4">
    <h2 class="text-xl font-bold">Order Information:</h2>
  </div>

  <div class="mb-4">
    <ul>
      <li><strong>Order Number:</strong> <%= rand(10000..99999) %></li>
      <li><strong>First Name:</strong> <%= @order.first_name %></li>
      <li><strong>Last Name:</strong> <%= @order.last_name %></li>
      <li><strong>Address:</strong> <%= @order.address %></li>
      <li><strong>Phone:</strong> <%= @order.phone %></li>
    </ul>
  </div>

</div>
