<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Firstname:</strong>
    <%= order.first_name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Lastname:</strong>
    <%= order.last_name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Address:</strong>
    <%= order.address %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Phone:</strong>
    <%= order.phone %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this order", order, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this order', edit_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
